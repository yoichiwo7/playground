<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/4.1.0/echarts.min.js"></script>


</head>

<body>
    <!-- TOC -->
    <ul>
    {% for title in titles %}
        <li>{{title}}</li>
    {% endfor %}
    </ul>
    
    <script type="text/javascript">
        let myChart;
        let option;
    </script>

{% for title, table, chart in zip(titles, tables, charts) %}
    <h2>{{title}}</h2>
    {{table}}
    <div id="{{title}}" style="width: 100%;height:400px;"></div>
    <script type="text/javascript">
        myChart = echarts.init(document.getElementById('{{title}}'));
        option = {{chart}};
        myChart.setOption(option);
    </script>
{% endfor %}
</body>

</html>